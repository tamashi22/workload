{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "images/*": ["assets/images/*"],
      "icons/*": ["assets/icons/*"]
    }
  }
}
